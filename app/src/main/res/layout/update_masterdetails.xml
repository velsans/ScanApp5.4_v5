<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transperantBlack"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/textview_or_edittext_hight_normal"
            android:background="@color/color_white"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight_large"
                android:background="@color/orange"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/updateMasterDetails_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center"
                    app:srcCompat="@mipmap/delete_cross"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Update Master Details"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight_large"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/updateMasterDetails_TreeNo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/black_edittextstyle"
                    android:completionThreshold="1"
                    android:gravity="center"
                    android:hint="TreeNo"
                    android:inputType="textCapCharacters|textNoSuggestions"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/theme_border"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/updateMasterDetails_F1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/black_edittextstyle"
                    android:gravity="center"
                    android:hint="Footer 1"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/theme_border"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/updateMasterDetails_F2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/black_edittextstyle"
                    android:gravity="center"
                    android:hint="Footer 2"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/theme_border"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/updateMasterDetails_T1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/black_edittextstyle"
                    android:gravity="center"
                    android:hint="Top 1"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/theme_border"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/updateMasterDetails_T2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/black_edittextstyle"
                    android:gravity="center"
                    android:hint="Top 2"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/theme_border"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/updateMasterDetails_Length"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/black_edittextstyle"
                    android:gravity="center"
                    android:hint="Length"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/theme_border"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight_large"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:id="@+id/updateMasterDetails_WSC"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/black_edittextstyle"
                    android:completionThreshold="1"
                    android:gravity="center"
                    android:hint="WSC"
                    android:inputType="textCapCharacters|textNoSuggestions"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/theme_border"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/updateMasterDetails_NoteF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/black_edittextstyle"
                    android:gravity="center"
                    android:hint="NoteF"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/theme_border"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/updateMasterDetails_NoteT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/black_edittextstyle"
                    android:gravity="center"
                    android:hint="NoteT"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/theme_border"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/updateMasterDetails_NoteL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/black_edittextstyle"
                    android:gravity="center"
                    android:hint="NoteL"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/theme_border"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/updateMasterDetails_Save"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:text="Save"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
