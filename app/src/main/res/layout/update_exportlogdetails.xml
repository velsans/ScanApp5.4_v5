                            android:textSize="@dimen/containerSize" />

                        <EditText
                            android:id="@+id/LengthCutVolumeETXT"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/white_edittextstyle"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:text=""
                            android:textSize="@dimen/containerSize"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/LengthCutTopETX"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@color/color_white"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:text=""
                            android:textSize="@dimen/containerSize" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorbtnsplash"
                        android:gravity="left|center"
                        android:paddingLeft="5dp"
                        android:text="Log Cracks"
                        android:textColor="@color/color_white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_black"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="CrackF1(cm)"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/containerSize"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="CrackF2(cm)"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/containerSize"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="CrackT1(cm)"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/containerSize"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="CrackT2(cm)"
