                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:hint="_transporter"
                    android:overlapAnchor="false"
                    android:popupBackground="@color/color_white"
                    android:textAlignment="center"
                    android:textColor="@color/color_black"
                    android:visibility="gone"></Spinner>


                <EditText
                    android:id="@+id/logUpdate_footer1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:hint="Footer1"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_black" />

                <EditText
                    android:id="@+id/logUpdate_footer2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:hint="Footer2"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_black" />

                <EditText
                    android:id="@+id/logUpdate_top1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:hint="Top1"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_black" />

                <EditText
                    android:id="@+id/logUpdate_top2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:hint="Top2"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_black" />


                <EditText
                    android:id="@+id/logUpdate_lenght"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:hint="Length"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_black" />

                <TextView
                    android:id="@+id/logUpdate_diameter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:hint="Diameter"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_black" />

                <TextView
                    android:id="@+id/logUpdate_Volume"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:hint="Volume"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_black" />

            </LinearLayout>

            <EditText
