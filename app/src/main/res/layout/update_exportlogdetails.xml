                    android:textColor="@color/color_white"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Foot2(cm)"
                    android:textAlignment="center"
                    android:textColor="@color/color_white"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Top1(cm)"
                    android:textAlignment="center"
                    android:textColor="@color/color_white"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Top2(cm)"
                    android:textAlignment="center"
                    android:textColor="@color/color_white"></TextView>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Diameter"
                    android:textAlignment="center"
                    android:textColor="@color/color_white"></TextView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Volume"
                    android:textAlignment="center"
                    android:textColor="@color/color_white"></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight_normal"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/heartMes_footer1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:hint="Footer1"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_black" />

                <EditText
                    android:id="@+id/heartMes_footer2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:hint="Footer2"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_black" />

                <EditText
                    android:id="@+id/heartMes_top1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:hint="Top1"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_black" />

                <EditText
                    android:id="@+id/heartMes_top2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:hint="Top2"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_black" />



                <TextView
                    android:id="@+id/heartMes_diameter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:hint="Diameter"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_black" />

                <TextView
                    android:id="@+id/heartMes_Volume"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:hint="Volume"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_black" />

            </LinearLayout>



        </LinearLayout>

