<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_or_edittext_hight_xlarge"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/TransferTopicsTXT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="INVENTORY TRANSFER"
                android:textColor="@color/color_white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/transferNXTtxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="4.1"
                app:srcCompat="@mipmap/next" />

            <ImageView
                android:id="@+id/advancedsearchTXT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="5"
                app:srcCompat="@mipmap/advance_search" />

            <ImageView
                android:id="@+id/transfer_printTXT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                app:srcCompat="@mipmap/printerlogo" />

            <ImageView
                android:id="@+id/closeInventoryTransfer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="5"
                app:srcCompat="@mipmap/delete_cross" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@color/theme_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/theme_background"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@color/cyan"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="2dp"
                            android:text="From Loc: "
                            android:textColor="@color/background"
                            android:textSize="10sp" />

                        <Spinner
                            android:id="@+id/fromlocaton_sppinner"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/textview_or_edittext_hight_normal"
                            android:hint="Arrival"
                            android:overlapAnchor="false"
                            android:popupBackground="@color/theme_border"
                            android:textAlignment="center"
                            android:textColor="@color/color_black"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/fromLocationTXT"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/textview_or_edittext_hight_large"
                            android:gravity="center"
                            android:hint="From Location"
                            android:overlapAnchor="false"
                            android:textColor="@color/color_white"
                            android:textColorHint="@color/theme_border"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <Spinner
                        android:id="@+id/fellingsection_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textview_or_edittext_hight_large"
                        android:layout_margin="1dp"
                        android:layout_marginTop="1dp"
                        android:backgroundTint="@color/color_white"
                        android:overlapAnchor="false"
                        android:popupBackground="@color/cyan"
                        android:textAlignment="center"
                        android:textColor="@color/color_black"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <!--           <android.support.v7.widget.AppCompatAutoCompleteTextView
                                   android:id="@+id/tolocation_ATxT"
                                   android:layout_width="match_parent"
                                   android:layout_height="@dimen/textview_or_edittext_hight_large"
                                   android:background="@color/cyan"
                                   android:completionThreshold="1"
                                   android:hint="Select Tolocation"
                                   android:popupBackground="@color/cyan"
                                   android:textAlignment="center"
                                   android:textAppearance="?android:attr/textAppearanceSmall"
                                   android:textColor="@color/color_black"
                                   android:textColorHint="@color/theme_border"
                                   android:textStyle="bold" />-->

                    <Spinner
                        android:id="@+id/tolocation_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textview_or_edittext_hight_large"
                        android:layout_margin="1dp"
                        android:backgroundTint="@color/color_white"
                        android:hint="@string/tolocation"
                        android:overlapAnchor="false"
                        android:popupBackground="@color/cyan"
                        android:textAlignment="center"
                        android:textColor="@color/color_black"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <!--     <android.support.v7.widget.AppCompatAutoCompleteTextView
                             android:id="@+id/driver_ATxT"
                             android:layout_width="match_parent"
                             android:layout_height="@dimen/textview_or_edittext_hight_large"
                             android:background="@color/teal"
                             android:completionThreshold="1"
                             android:hint="Select DriverName"
                             android:popupBackground="@color/teal"
                             android:textAlignment="center"
                             android:textAppearance="?android:attr/textAppearanceSmall"
                             android:textColor="@color/color_black"
                             android:textColorHint="@color/theme_border"
                             android:textStyle="bold" />-->

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textview_or_edittext_hight_large"
                        android:layout_margin="1dp"
                        android:hint="_transporter"
                        android:overlapAnchor="false"
                        android:popupBackground="@color/theme_border"
                        android:textAlignment="center"
                        android:textColor="@color/color_black"
                        android:visibility="gone" />

                    <Spinner
                        android:id="@+id/driver_sppinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textview_or_edittext_hight_large"
                        android:layout_margin="1dp"
                        android:backgroundTint="@color/color_white"
                        android:completionThreshold="1"
                        android:overlapAnchor="false"
                        android:popupBackground="@color/brown"
                        android:textAlignment="center"
                        android:textColor="@color/color_black"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <!--            <android.support.v7.widget.AppCompatAutoCompleteTextView
                                    android:id="@+id/transagency_ATxT"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/textview_or_edittext_hight_large"
                                    android:background="@color/amber"
                                    android:completionThreshold="1"
                                    android:hint="Select AgencyDetails"
                                    android:popupBackground="@color/amber"
                                    android:textAlignment="center"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="@color/color_black"
                                    android:textColorHint="@color/theme_border"
                                    android:textStyle="bold" />-->

                    <Spinner
                        android:id="@+id/transagency_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textview_or_edittext_hight_large"
                        android:layout_margin="1dp"
                        android:backgroundTint="@color/color_white"
                        android:overlapAnchor="false"
                        android:popupBackground="@color/amber"
                        android:textAlignment="center"
                        android:textColor="@color/color_black"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <!--   <android.support.v7.widget.AppCompatAutoCompleteTextView
                           android:id="@+id/truckplateumber_ATxT"
                           android:layout_width="match_parent"
                           android:layout_height="@dimen/textview_or_edittext_hight_large"
                           android:background="@color/orange"
                           android:completionThreshold="1"
                           android:hint="Select TruckDetails"
                           android:popupBackground="@color/orange"
                           android:textAlignment="center"
                           android:textAppearance="?android:attr/textAppearanceSmall"
                           android:textColor="@color/color_black"
                           android:textColorHint="@color/theme_border"
                           android:textStyle="bold" />
   -->
                    <Spinner
                        android:id="@+id/truckplateumber_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textview_or_edittext_hight_large"
                        android:layout_margin="1dp"
                        android:backgroundTint="@color/color_white"
                        android:overlapAnchor="false"
                        android:popupBackground="@color/orange"
                        android:textAlignment="center"
                        android:textColor="@color/color_black"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@color/theme_background"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="2dp"
                            android:text="VVB # : "
                            android:textColor="@color/background"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/VBB_numberTXT"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/textview_or_edittext_hight_large"
                            android:gravity="center"
                            android:hint="VVB #"
                            android:overlapAnchor="false"
                            android:textColor="@color/color_white"
                            android:textColorHint="@color/theme_border"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@color/colorPrimary"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Transport Modes"
                            android:textColor="@color/color_black"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/TransportTypeIDTXT"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/textview_or_edittext_hight_large"
                            android:gravity="center"
                            android:hint="Transport mode"
                            android:overlapAnchor="false"
                            android:background="@color/theme_background"
                            android:textColor="@color/color_white"
                            android:textColorHint="@color/border"
                            android:textStyle="bold" />

                        <ListView
                            android:id="@+id/transferMode_LV"
                            android:layout_width="match_parent"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:background="@color/color_white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@color/TabColor"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="LoadedBy"
                            android:textColor="@color/color_white"
                            android:textStyle="bold" />

                        <ListView
                            android:id="@+id/loadedby_LV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/color_white" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/transfer_editLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:background="@color/blacktransper"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"
                    android:visibility="gone"></LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textview_or_edittext_hight_large">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textview_or_edittext_hight_large"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/tolocation_ATxT"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/teal"
                            android:hint="Select Tolocation"
                            android:popupBackground="@color/teal"
                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/color_black"
                            android:textColorHint="@color/theme_border"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/transagency_ATxT"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/amber"
                            android:hint="Select AgencyDetails"
                            android:popupBackground="@color/amber"
                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/color_black"
                            android:textColorHint="@color/theme_border"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/driver_ATxT"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/lime"
                            android:hint="Select DriverName"
                            android:popupBackground="@color/lime"
                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/color_black"
                            android:textColorHint="@color/theme_border"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/truckplateumber_ATxT"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/orange"
                            android:hint="Select TruckDetails"
                            android:popupBackground="@color/orange"
                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/color_black"
                            android:textColorHint="@color/theme_border"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/transfer_editLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:background="@color/blacktransper"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical"
                        android:visibility="gone"></LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textview_or_edittext_hight_large"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/refreshExternalDataBase"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:background="@color/theme_background"
                        android:gravity="center"
                        app:srcCompat="@mipmap/refresh"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/scanValueEDTXT"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/black_edittextstyle"
                        android:gravity="center"
                        android:hint="Scan/Enter Barcode Manually"
                        android:inputType="textCapCharacters"
                        android:maxLength="10"
                        android:padding="5dp"
                        android:textColor="@color/color_white"
                        android:textColorHint="@color/edittextColor">

                        <requestFocus />
                    </EditText>

                    <ImageView
                        android:id="@+id/transferEnterIMG"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:background="@color/colorAccent"
                        android:gravity="center"
                        app:srcCompat="@mipmap/login"
                        android:visibility="visible" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_white" />

                <LinearLayout
                    android:id="@+id/scannerListlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textview_or_edittext_hight_large"
                        android:background="@color/colorPrimary_light"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2.3"
                            android:background="@color/red"
                            android:visibility="invisible">


                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                app:srcCompat="@mipmap/ic_delete_forever_white_24dp"
                                android:textColor="@android:color/black"
                                android:visibility="visible" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.7"
                            android:gravity="center"
                            android:text="SBB Label"
                            android:textColor="@color/color_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.7"
                            android:gravity="center"
                            android:text="WoodSpecie Code"
                            android:textColor="@color/color_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Quality"
                            android:textColor="@color/color_white" />


                    </LinearLayout>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/background">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/inventorytransfer_lv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/textview_or_edittext_hight_large"
                            app:reverseLayout="true"
                            app:stackFromEnd="true"></androidx.recyclerview.widget.RecyclerView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/textview_or_edittext_hight_large"
                            android:layout_gravity="bottom"
                            android:background="@color/colorPrimary_light"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/textview_or_edittext_hight_large"
                                android:layout_gravity="bottom"
                                android:layout_weight="1"
                                android:background="@color/deeporange"
                                android:gravity="right|center"
                                android:paddingLeft="5dp"
                                android:text="Total Count : "
                                android:textColor="@color/color_white"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/TotalScannedCount"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/textview_or_edittext_hight_large"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:paddingLeft="5dp"
                                android:textColor="@color/color_white"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/deeporange"
                                android:gravity="center|right"
                                android:paddingLeft="5dp"
                                android:text="Total Volume : "
                                android:textColor="@color/color_white"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/TotalScannedVolumeTransfer"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/textview_or_edittext_hight_large"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:paddingLeft="5dp"
                                android:text="0"
                                android:textColor="@color/color_white"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/NovalueFound"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Value not found, please try diff barcode"
                            android:textColor="@color/color_black"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/TransferScanBTN"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right|bottom"
        android:layout_margin="15dp"
        android:src="@mipmap/scanner" />

    <LinearLayout
        android:id="@+id/advancesearchLAY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <include
            layout="@layout/advance_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/progressbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <include
            layout="@layout/progressbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></include>
    </LinearLayout>

</FrameLayout>
