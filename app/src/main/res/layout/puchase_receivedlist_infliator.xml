<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/prl_receivedlayoutBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_or_edittext_hight_large"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/prl_received_IDTxT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.01"
            android:gravity="center"
            android:text="Rece ID"
            android:textColor="@color/color_black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prl_received_TransferTxT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="center"
            android:text="Trans ID"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/prl_received_imeiTxT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="IMEI"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/prl_received_startTimeTxT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="StartTime"
            android:textColor="@color/color_black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prl_received_endTimeTxT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="EndTime"
            android:textColor="@color/color_black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prl_received_countTxT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="center"
            android:text="Count"
            android:textColor="@color/color_black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prl_received_VolumeTxT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="center"
            android:text="Volume"
            android:textColor="@color/color_black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prl_received_syncStatusTxT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="center"
            android:text="Status"
            android:textColor="@color/color_black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prl_received_syncTimeTxT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Sync Time"
            android:textColor="@color/color_black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/prl_printSlip_IMG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="center"
            app:srcCompat="@mipmap/printerlogo" />

        <ImageView
            android:id="@+id/prl_received_syncIMG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="center"
            android:visibility="gone"
            app:srcCompat="@mipmap/refresh" />

        <ImageView
            android:id="@+id/prl_received_Delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:visibility="visible"
            app:srcCompat="@mipmap/delete_items" />

        <ImageView
            android:id="@+id/prl_received_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:visibility="gone"
            app:srcCompat="@mipmap/view" />

    </LinearLayout>

</LinearLayout>