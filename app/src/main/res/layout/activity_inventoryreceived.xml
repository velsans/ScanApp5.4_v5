<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_or_edittext_hight_xlarge"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="INVENTORY RECEIVED"
                android:textColor="@color/color_white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ReceivedNXTtxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="4.1"
                app:srcCompat="@mipmap/next" />

            <ImageView
                android:id="@+id/advancedsearchTXT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="5"
                app:srcCompat="@mipmap/advance_search" />

            <ImageView
                android:id="@+id/Received_Print"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="5"
                app:srcCompat="@mipmap/printerlogo" />

            <ImageView
                android:id="@+id/Received_close"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="5"
                app:srcCompat="@mipmap/delete_cross" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@color/theme_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/theme_background"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Received_scanQRDetails"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/textview_or_edittext_hight_large"
                            android:layout_margin="1dp"
                            android:background="@color/colorAccent"
                            android:gravity="center"
                            android:src="@mipmap/scanner"
                            android:text="Scan QR Code"
                            android:textColor="@color/color_white"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/toLocationTXT"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/textview_or_edittext_hight_large"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:hint="@string/tolocation"
                            android:overlapAnchor="false"
                            android:textColor="@color/color_white"
                            android:textColorHint="@color/theme_border"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/textview_or_edittext_hight_large"
                            android:layout_margin="1dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:overlapAnchor="false"
                                android:paddingLeft="2dp"
                                android:text="Trans ID :  "
                                android:textColor="@color/color_white"
                                android:textColorHint="@color/theme_border"
                                android:textSize="10sp" />

                            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                android:id="@+id/transferIDAutoTXT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:hint="Enter Transfer ID "
                                android:inputType="number"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_white"
                                android:textColorHint="@color/theme_border"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/addTransferIDTXT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:background="@color/colorAccent"
                                android:gravity="center"
                                android:overlapAnchor="false"
                                android:paddingLeft="2dp"
                                android:text="ADD"
                                android:textColor="@color/color_white"
                                android:textColorHint="@color/theme_border" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/theme_background"
                                android:gravity="left|center"
                                android:hint="TransferID"
                                android:inputType="number"
                                android:overlapAnchor="false"
                                android:textColor="@color/color_white"
                                android:textColorHint="@color/theme_border"
                                android:textStyle="bold"
                                android:visibility="gone" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/fellingSpinnerTxT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:text="Felling Section:"
                                android:textColor="@color/background"
                                android:textSize="10sp"
                                android:visibility="gone" />

                            <Spinner
                                android:id="@+id/fellingsection_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/textview_or_edittext_hight_large"
                                android:layout_weight="1"
                                android:backgroundTint="@color/color_white"
                                android:overlapAnchor="false"
                                android:popupBackground="@color/cyan"
                                android:textAlignment="center"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:text="To Location:"
                                android:textColor="@color/background"
                                android:textSize="10sp"
                                android:visibility="gone" />

                            <Spinner
                                android:id="@+id/fromlocation_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/textview_or_edittext_hight_large"
                                android:layout_weight="1"
                                android:backgroundTint="@color/color_white"
                                android:hint="@string/tolocation"
                                android:overlapAnchor="false"
                                android:popupBackground="@color/cyan"
                                android:textAlignment="center"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/textview_or_edittext_hight_large"
                            android:layout_margin="1dp"
                            android:hint="_transporter"
                            android:overlapAnchor="false"
                            android:popupBackground="@color/theme_border"
                            android:textAlignment="center"
                            android:textColor="@color/color_black"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:text="Driver Details:"
                                android:textColor="@color/background"
                                android:textSize="10sp"
                                android:visibility="gone" />

                            <Spinner
                                android:id="@+id/driver_sppinner"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/textview_or_edittext_hight_large"
                                android:layout_weight="1"
                                android:backgroundTint="@color/color_white"
                                android:completionThreshold="1"
                                android:overlapAnchor="false"
                                android:popupBackground="@color/brown"
                                android:textAlignment="center"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:text="Transport Agency:"
                                android:textColor="@color/background"
                                android:textSize="10sp"
                                android:visibility="gone" />

                            <Spinner
                                android:id="@+id/transagency_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/textview_or_edittext_hight_large"
                                android:layout_weight="1"
                                android:backgroundTint="@color/color_white"
                                android:overlapAnchor="false"
                                android:popupBackground="@color/amber"
                                android:textAlignment="center"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:paddingLeft="2dp"
                                android:text="Truck Details:"
                                android:textColor="@color/background"
                                android:textSize="10sp"
                                android:visibility="gone" />

                            <Spinner
                                android:id="@+id/truckplateumber_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/textview_or_edittext_hight_large"
                                android:layout_weight="1"
                                android:backgroundTint="@color/color_white"
                                android:overlapAnchor="false"
                                android:popupBackground="@color/orange"
                                android:textAlignment="center"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/textview_or_edittext_hight_large"
                            android:layout_margin="1dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:overlapAnchor="false"
                                android:paddingLeft="2dp"
                                android:text="VVB # : "
                                android:textColor="@color/color_white"
                                android:textColorHint="@color/theme_border"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/VBB_numberTXT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:hint="VVB Number"
                                android:overlapAnchor="false"
                                android:textColor="@color/color_white"
                                android:textColorHint="@color/theme_border"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@color/colorPrimary"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Transport Modes"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />

                            <ListView
                                android:id="@+id/ReceivedMode_LV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/color_white" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/received_editLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/blacktransper"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical"
                        android:visibility="gone"></LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textview_or_edittext_hight_large">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/textview_or_edittext_hight_large"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                android:id="@+id/fromlocation_ATxT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/teal"
                                android:hint="Select FromLocation"
                                android:popupBackground="@color/teal"
                                android:textAlignment="center"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black"
                                android:textColorHint="@color/theme_border"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                android:id="@+id/transagency_ATxT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/amber"
                                android:hint="Select AgencyDetails"
                                android:popupBackground="@color/amber"
                                android:textAlignment="center"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black"
                                android:textColorHint="@color/theme_border"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                android:id="@+id/driver_ATxT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/lime"
                                android:hint="Select DriverName"
                                android:popupBackground="@color/lime"
                                android:textAlignment="center"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black"
                                android:textColorHint="@color/theme_border"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                android:id="@+id/truckplateumber_ATxT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/orange"
                                android:hint="Select TruckDetails"
                                android:popupBackground="@color/orange"
                                android:textAlignment="center"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black"
                                android:textColorHint="@color/theme_border"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/transfer_editLayout2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:background="@color/blacktransper"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:orientation="vertical"
                            android:visibility="gone"></LinearLayout>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textview_or_edittext_hight_large"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/Received_scanValueEDTXT"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/black_edittextstyle"
                            android:gravity="center"
                            android:hint="Scan/Enter Barcode Manually"
                            android:inputType="textCapCharacters"
                            android:maxLength="10"
                            android:padding="5dp"
                            android:textColor="@color/color_white"
                            android:textColorHint="@color/edittextColor">

                            <requestFocus />
                        </EditText>

                        <ImageView
                            android:id="@+id/Received_EnterIMG"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:background="@color/colorAccent"
                            android:gravity="center"
                            android:visibility="visible"
                            app:srcCompat="@mipmap/login" />

                        <ImageView
                            android:id="@+id/Received_scanQRBarCode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:background="@color/colorAccent"
                            android:gravity="center"
                            android:visibility="visible"
                            app:srcCompat="@mipmap/scanner" />

                        <ImageView
                            android:id="@+id/receivedDetails_open"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:background="@color/colorAccent"
                            android:gravity="center"
                            android:visibility="visible"
                            app:srcCompat="@mipmap/view" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/resultlayoutBackground"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/textview_or_edittext_hight_large"
                            android:background="@color/colorPrimary_light"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/removeBarCode_invenReceied"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2.2"
                                android:background="@color/red"
                                android:visibility="invisible">


                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textColor="@android:color/black"
                                    android:visibility="visible"
                                    app:srcCompat="@mipmap/ic_delete_forever_white_24dp" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.7"
                                android:gravity="center"
                                android:text="SBB Label"
                                android:textColor="@color/color_white" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.7"
                                android:gravity="center"
                                android:text="WoodSpecie Code"
                                android:textColor="@color/color_white" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="Quality"
                                android:textColor="@color/color_white" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="CHECKED"
                                android:textColor="@color/color_white" />

                        </LinearLayout>


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/background">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/Received_ListView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/textview_or_edittext_hight_large"
                                app:reverseLayout="true"
                                app:stackFromEnd="true"></androidx.recyclerview.widget.RecyclerView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/textview_or_edittext_hight_large"
                                android:layout_gravity="bottom"
                                android:background="@color/colorPrimary_light"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/deeporange"
                                    android:gravity="center|right"
                                    android:paddingLeft="5dp"
                                    android:text="Total Volume : "
                                    android:textColor="@color/color_white"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/TotalVolumeReceived"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/textview_or_edittext_hight_large"
                                    android:layout_weight="1"
                                    android:gravity="left|center"
                                    android:paddingLeft="5dp"
                                    android:text="0"
                                    android:textColor="@color/color_white"
                                    android:textSize="@dimen/largeTextsize"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/deeporange"
                                    android:gravity="center|right"
                                    android:paddingLeft="5dp"
                                    android:text="Total Count : "
                                    android:textColor="@color/color_white"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/Received_TotalScannedCount"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/textview_or_edittext_hight_large"
                                    android:layout_weight="1"
                                    android:gravity="left|center"
                                    android:paddingLeft="5dp"
                                    android:textColor="@color/color_white"
                                    android:textSize="@dimen/largeTextsize"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/textview_or_edittext_hight_large"
                                    android:layout_gravity="bottom"
                                    android:layout_weight="1"
                                    android:background="@color/deeporange"
                                    android:gravity="left|center"
                                    android:paddingLeft="5dp"
                                    android:text="Total Checked : "
                                    android:textColor="@color/color_white"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/Received_TotalCheckedCount"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/textview_or_edittext_hight_large"
                                    android:layout_weight="1"
                                    android:gravity="left|center"
                                    android:paddingLeft="5dp"
                                    android:textColor="@color/color_white"
                                    android:textSize="@dimen/largeTextsize"
                                    android:textStyle="bold" />


                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/NovalueFound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Value not found, please try diff barcode"
                android:textColor="@color/color_black"
                android:textStyle="bold"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Received_ScanBTN"
        android:layout_width="@dimen/scanbuttonSize"
        android:layout_height="@dimen/scanbuttonSize"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="@dimen/textview_or_edittext_hight_large"
        android:scaleType="center"
        android:src="@mipmap/scanner"
        app:fabCustomSize="100dp"
        app:fabSize="auto" />

    <LinearLayout
        android:id="@+id/advancesearchLAY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <include
            layout="@layout/advance_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/receivedDetails_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:visibility="gone">

        <include
            layout="@layout/received_details_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></include>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/progressbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <include
            layout="@layout/progressbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></include>
    </LinearLayout>


</FrameLayout>
