<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transperantBlack"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/textview_or_edittext_hight_normal"
            android:background="@color/color_white"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight_large"
                android:background="@color/orange"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Tree Details"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white" />

                <ImageView
                    android:id="@+id/updateTreeNumber_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:src="@mipmap/delete_cross"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight_xlarge"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/NewTreeNum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittextstyle"
                    android:gravity="center"
                    android:hint="TreeNumber"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/theme_border"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/NewWoodSpeiceCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittextstyle"
                    android:completionThreshold="1"
                    android:gravity="center"
                    android:hint="WSC"
                    android:inputType="textCapCharacters|textNoSuggestions"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/theme_border"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/NewPlotNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittextstyle"
                    android:completionThreshold="1"
                    android:gravity="center"
                    android:hint="PlotNo"
                    android:inputType="textCapCharacters|textNoSuggestions"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/theme_border"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/updateTreeNum_F1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittextstyle"
                    android:gravity="center"
                    android:hint="Footer 1"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/theme_border"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/updateTreeNum_F2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittextstyle"
                    android:gravity="center"
                    android:hint="Footer 2"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/theme_border"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/updateTreeNum_T1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittextstyle"
                    android:gravity="center"
                    android:hint="Top 1"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/theme_border"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/updateTreeNum_T2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittextstyle"
                    android:gravity="center"
                    android:hint="Top 2"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/theme_border"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/updateTreeNum_Length"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittextstyle"
                    android:gravity="center"
                    android:hint="Length"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/theme_border"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/updateTreeNum_Save"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:text="Save"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/color_white" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
