<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amber"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_or_edittext_hight_xlarge"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="CONTAINER DETAILS"
                android:textColor="@color/color_white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/transfer_printTXT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="5"
                android:src="@mipmap/printerlogo"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/closeActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="5"
                android:src="@mipmap/delete_cross" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight_large"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/export_WSpecieTxT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:background="@drawable/white_edittextstyle"
                    android:completionThreshold="1"
                    android:gravity="center"
                    android:hint="WSpieceCode"
                    android:inputType="textCapCharacters|textNoSuggestions"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/theme_border"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/diameterEDT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_edittextstyle"
                    android:gravity="center"
                    android:hint="Diameter Sizes"
                    android:layout_margin="1dp"
                    android:inputType="number"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_black"
                    android:textStyle="bold"
                    android:textColorHint="@color/edittextColor"></EditText>

                <EditText
                    android:id="@+id/TotCBMEDT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_edittextstyle"
                    android:gravity="center"
                    android:hint="Total CBM"
                    android:layout_margin="1dp"
                    android:inputType="numberDecimal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_black"
                    android:textStyle="bold"
                    android:textColorHint="@color/edittextColor"></EditText>

                <EditText
                    android:id="@+id/selectedCBM"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_edittextstyle"
                    android:gravity="center"
                    android:hint="Selected CBM"
                    android:inputType="text"
                    android:visibility="gone"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/color_black"
                    android:textStyle="bold"
                    android:textColorHint="@color/edittextColor"></EditText>

                <ImageView
                    android:id="@+id/quationListIMG"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:background="@color/color_white"
                    android:src="@mipmap/list"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight_large"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/locationNameTXT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:layout_margin="1dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="Location Name"
                    android:textColor="@color/color_white"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/refreshExternalDataBase"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/theme_background"
                    android:gravity="center"
                    android:src="@mipmap/refresh"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/textStatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/black_edittextstyle"
                    android:gravity="center"
                    android:hint="scan / enter barcode Manually"
                    android:layout_margin="1dp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/edittextColor"></EditText>

                <!-- <Spinner
                     android:id="@+id/spin_classification"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_weight="1.7"
                     android:backgroundTint="@color/color_white"
                     android:overlapAnchor="false"
                     android:popupBackground="@color/cyan"
                     android:textAlignment="center"
                     android:textColor="@color/color_black"
                     android:textStyle="bold"  />-->

                <ImageView
                    android:id="@+id/exportPlantEnterIMG"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.64"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:src="@mipmap/login"
                    android:visibility="visible" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight_large"
                android:layout_marginTop="1dp"
                android:background="@color/TabColor"
                android:visibility="visible"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:src="@mipmap/ic_delete_forever_white_24dp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="SBB Label"
                    android:textStyle="bold"
                    android:textColor="@color/color_white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="WS Code"
                    android:textColor="@color/color_white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Diameter Sizes"
                    android:textColor="@color/color_white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="CBM"
                    android:textColor="@color/color_white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="Select"
                    android:textColor="@color/color_white" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/exportPlan_lv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/textview_or_edittext_hight_large"
                    app:reverseLayout="true"
                    app:stackFromEnd="true"></android.support.v7.widget.RecyclerView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textview_or_edittext_hight_large"
                    android:layout_gravity="bottom"
                    android:background="@color/colorPrimary_light"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/deeporange"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="Total Count : "
                        android:textColor="@color/color_white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TotalScannedCount"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textview_or_edittext_hight_large"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/color_white"
                       android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/deeporange"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="Total Volume : "
                        android:textColor="@color/color_white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TotalScannedVolume"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textview_or_edittext_hight_large"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:paddingLeft="5dp"
                        android:text="0"
                        android:textColor="@color/color_white"
                       android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="bold" />

                </LinearLayout>


                <TextView
                    android:id="@+id/NovalueFound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Value not found, please try diff barcode"
                    android:textColor="@color/color_black"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/exportScanBTN"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right|bottom"
        android:layout_margin="10dp"
        android:src="@mipmap/scanner" />

    <LinearLayout
        android:id="@+id/SbbLabelCheck_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <include
            layout="@layout/sbblabel_verification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></include>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/quationList_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <include
            layout="@layout/quatation_list_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></include>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/progressbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <include
            layout="@layout/progressbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></include>
    </LinearLayout>
</FrameLayout>