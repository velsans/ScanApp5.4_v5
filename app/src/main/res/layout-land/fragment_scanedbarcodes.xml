<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addresses_confirm_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight_large"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/refreshExternalDataBase"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/theme_background"
                    android:gravity="center"
                    app:srcCompat="@mipmap/refresh"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/color_white"
                    android:gravity="right|center"
                    android:paddingLeft="5dp"
                    android:text="ADD BARCODE : "
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:visibility="visible" />


                <EditText
                    android:id="@+id/textStatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/black_edittextstyle"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="barcode"
                    android:inputType="textCapCharacters"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/edittextColor"></EditText>


                <ImageView
                    android:id="@+id/exportPlantEnterIMG"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    app:srcCompat="@mipmap/login"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/advancedsearchIMG"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/blue"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    app:srcCompat="@mipmap/advance_search" />

                <ImageView
                    android:id="@+id/exportScanBTN"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_gravity="right|bottom"
                    android:scaleType="fitCenter"
                    app:srcCompat="@mipmap/scannercircle"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/snack_barList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textview_or_edittext_hight_normal"
                    android:layout_marginTop="1dp"
                    android:background="@color/cyan"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/TotalScannedLogsCount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.11"
                        android:background="@color/colorbtnsplash"
                        android:gravity="left|center"
                        android:paddingLeft="5dp"
                        android:text="Tot Scanned Vloume :"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/color_white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/OrderRemainingCBMTXT"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.19"
                        android:background="@color/red"
                        android:gravity="left|center"
                        android:paddingLeft="5dp"
                        android:text="Rem CBM :"
                        android:textColor="@color/color_white"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.39"
                        android:gravity="right|center"
                        android:src="@mipmap/ic_delete_forever_white_24dp"
                        android:text="QutNo :"
                        android:visibility="gone"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/quotationSpinners"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1.2"
                        android:hint="_transporter"
                        android:visibility="gone"
                        android:overlapAnchor="false"
                        android:textAlignment="center"
                        android:textColor="@color/color_black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.39"
                        android:gravity="right|center"
                        android:src="@mipmap/ic_delete_forever_white_24dp"
                        android:text="ConNo :"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/containerSpinners"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:layout_weight="1.2"
                        android:hint="_transporter"
                        android:overlapAnchor="false"
                        android:textAlignment="center"
                        android:textColor="@color/color_black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textview_or_edittext_hight_large"
                    android:layout_marginTop="1dp"
                    android:background="@color/TabColor"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1.25"
                        android:gravity="center"
                        android:src="@mipmap/ic_delete_forever_white_24dp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1.25"
                        android:gravity="center"
                        android:src="@mipmap/ic_delete_forever_white_24dp"
                        android:textColor="@android:color/black" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:layout_weight="1.25"
                        >

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/select_all"
                            />
                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.15"
                        android:gravity="center"
                        android:text="ContainterNo"
                        android:textColor="@color/color_white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.17"
                        android:gravity="center"
                        android:text="SBB Label"
                        android:textColor="@color/color_white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="WSC"
                        android:textStyle="bold"
                        android:textColor="@color/color_white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="F1"
                        android:textStyle="bold"
                        android:textColor="@color/color_white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="F2"
                        android:textStyle="bold"
                        android:textColor="@color/color_white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="T1"
                        android:textStyle="bold"
                        android:textColor="@color/color_white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="T2"
                        android:textStyle="bold"
                        android:textColor="@color/color_white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="Avg Dia"
                        android:textStyle="bold"
                        android:textColor="@color/color_white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="CBM"
                        android:textColor="@color/color_white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Select"
                        android:textColor="@color/color_white"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/exportPlan_lv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="40dp"
                    app:reverseLayout="true"
                    app:stackFromEnd="true"></androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_or_edittext_hight_large"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@color/colorPrimary_light"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.06"
                android:background="@color/deeporange"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="Total Count : "
                android:textColor="@color/color_white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TotalScannedCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.04"
                android:background="@color/deeporange"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="Total Volume : "
                android:textColor="@color/color_white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TotalScannedVolume"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:paddingLeft="5dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_white"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/NovalueFound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Value not found, please try diff barcode"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/SbbLabelCheck_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/transperantBlack"
            android:orientation="vertical"
            android:visibility="gone">

            <include
                layout="@layout/sbblabel_verification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></include>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/updateLogDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/transperantBlack"
            android:orientation="vertical"
            android:visibility="gone">

            <include
                layout="@layout/update_exportlogdetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></include>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/advancesearchLAY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone">

            <include
                layout="@layout/export_advancedsearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sbblabelChildDetailsLAY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@color/transperantBlack"
            android:focusable="true"
            android:visibility="gone">

            <include
                layout="@layout/sbblabel_childdetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/progressbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <include
                layout="@layout/progressbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></include>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
