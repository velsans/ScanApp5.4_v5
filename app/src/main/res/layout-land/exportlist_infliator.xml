<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">


    <androidx.cardview.widget.CardView
        android:id="@+id/export_layout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <LinearLayout
            android:id="@+id/cardview_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/syncdetails_border"
            android:elevation="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/whitecorner"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/exportlayoutBackground_1"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@color/border"
                        android:orientation="horizontal"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:orientation="horizontal"
                            android:weightSum="6">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text="Order No : "
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black" />

                            <TextView
                                android:id="@+id/exportOrderNumTxT"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text=" "
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text="ExportNo : "
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black" />

                            <TextView
                                android:id="@+id/exportNumTxT"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text="Quotation No : "
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black" />

                            <TextView
                                android:id="@+id/exportQuatN0TxT"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:orientation="horizontal"
                            android:weightSum="6">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text="Booking No: "
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black" />

                            <TextView
                                android:id="@+id/exportBookingNumTxT"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text="ShipCmpy : "
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black" />

                            <TextView
                                android:id="@+id/exportShippingCompanyTxT"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text="Container Count:"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black" />

                            <TextView
                                android:id="@+id/exportContainerCountTxT"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="6">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text="StuffDate :"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black" />

                            <TextView
                                android:id="@+id/exportStuffingDateTxT"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text="CutDateTime:"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black" />

                            <TextView
                                android:id="@+id/exportCutOffEndDateTimeTxT"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="@dimen/textview_or_edittext_hight_normal"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                app:srcCompat="@mipmap/time"
                                android:textColor="@android:color/black"
                                android:visibility="visible" />
                            <TextView
                                android:id="@+id/export_startTimeTxT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text="StartTime"
                                android:textColor="@color/border"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="@dimen/textview_or_edittext_hight_normal"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                app:srcCompat="@mipmap/stopwatch"
                                android:textColor="@android:color/black"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/export_endTimeTxT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text="EndTime"
                                android:textColor="@color/border"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text="Count : "
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black" />

                            <TextView
                                android:id="@+id/export_TotalCountTxT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.1"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text="100"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text="Total Volume : "
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black" />

                            <TextView
                                android:id="@+id/export_VolumeTxT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text="10000.0000"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:paddingLeft="10dp"
                            android:text="Sync Status Details : "
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/color_black"
                            android:textStyle="italic" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/textview_or_edittext_hight_large"
                            android:layout_margin="2dp"
                            android:background="@drawable/syncdetails_border"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text="Status : "
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black" />

                            <ImageView
                                android:id="@+id/exportSyncStatusIcon"
                                android:layout_width="@dimen/textview_or_edittext_hight_normal"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                app:srcCompat="@mipmap/fail"
                                android:textColor="@android:color/black"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/exportSyncStatus"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.3"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text="Date : "
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/color_black" />

                            <TextView
                                android:id="@+id/exportSyncDate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:paddingLeft="10dp"
                                android:text=""
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/ExportListExportTOExcel"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                app:srcCompat="@mipmap/excel" />

                            <ImageView
                                android:id="@+id/exportSave"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                app:srcCompat="@mipmap/refresh"
                                android:textColor="@android:color/black"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/ImgExportDelete"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                app:srcCompat="@mipmap/delete_items"
                                android:textColor="@android:color/black"
                                android:visibility="visible" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
