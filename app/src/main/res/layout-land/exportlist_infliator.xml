<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:elevation="2dp"
            android:background="@drawable/syncdetails_border"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/whitecorner"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/exportlayoutBackground"
                        android:layout_width="10dp"
                        android:layout_margin="5dp"
                        android:background="@color/border"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="@dimen/textview_or_edittext_hight_large">

                            <TextView
                                android:layout_width="wrap_content"
                                android:paddingLeft="10dp"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="OrderNo : "
                                android:textColor="@color/color_black"
                                />

                            <TextView
                                android:id="@+id/export_orderNoTxT"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/textview_or_edittext_hight_large"
                                android:gravity="left|center"
                                android:layout_weight=".5"
                                android:paddingLeft="10dp"
                                android:text="123456789 "
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:paddingLeft="10dp"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="ExportID : "
                                android:textColor="@color/color_black"
                                />

                            <TextView
                                android:id="@+id/export_UniqueIDTxT"
                                android:layout_width="wrap_content"
                                android:paddingLeft="10dp"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:layout_weight="0.5"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="20192019201920"
                                android:textColor="@color/border"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="@dimen/textview_or_edittext_hight_large">

                            <ImageView
                                android:layout_width="@dimen/textview_or_edittext_hight_normal"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@mipmap/time"
                                android:layout_marginLeft="10dp"
                                android:textColor="@android:color/black"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/export_startTimeTxT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:layout_weight="1.5"
                                android:paddingLeft="10dp"
                                android:text="StartTime"
                                android:textColor="@color/border"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="@dimen/textview_or_edittext_hight_normal"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:src="@mipmap/stopwatch"
                                android:textColor="@android:color/black"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/export_endTimeTxT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="left|center"
                                android:text="EndTime"
                                android:textColor="@color/border"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="@dimen/textview_or_edittext_hight_large">

                            <TextView
                                android:layout_width="wrap_content"
                                android:paddingLeft="10dp"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Count : "
                                android:textColor="@color/color_black"
                                />

                            <TextView
                                android:id="@+id/export_TotalCountTxT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:paddingLeft="10dp"
                                android:gravity="left|center"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="100"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:paddingLeft="10dp"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Total Volume : "
                                android:textColor="@color/color_black"
                                />

                            <TextView
                                android:id="@+id/export_VolumeTxT"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:paddingLeft="10dp"
                                android:gravity="left|center"
                                android:text="10000.0000"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:paddingLeft="10dp"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:textStyle="italic"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Sync Status Details : "
                            android:textColor="@color/color_black"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:background="@drawable/syncdetails_border"
                            android:layout_margin="3dp"
                            android:layout_height="@dimen/textview_or_edittext_hight_large">

                            <TextView
                                android:layout_width="wrap_content"
                                android:paddingLeft="10dp"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Status : "
                                android:textColor="@color/color_black"
                                />

                            <ImageView
                                android:id="@+id/export_syncStatusIcon"
                                android:layout_width="@dimen/textview_or_edittext_hight_normal"
                                android:layout_height="match_parent"
                                android:src="@mipmap/fail"
                                android:layout_marginLeft="10dp"
                                android:textColor="@android:color/black"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/export_syncStatus"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="1"
                                android:layout_weight="1.5"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:paddingLeft="10dp"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Date : "
                                android:textColor="@color/color_black"
                                />

                            <TextView
                                android:id="@+id/export_syncDate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:layout_weight="1"
                                android:paddingLeft="10dp"
                                android:text="20-10-2019 21:22:12 FADDA"
                                android:textColor="@color/color_black"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/export_save"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:src="@mipmap/refresh"
                                android:textColor="@android:color/black"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/export_delete"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:src="@mipmap/delete_items"
                                android:textColor="@android:color/black"
                                android:visibility="visible" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/exportInnerLayoutRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textview_or_edittext_hight_large"
                    android:background="@color/TabColor"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:src="@mipmap/ic_delete_forever_white_24dp"
                        android:textColor="@android:color/black"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="SBB Label"
                        android:textStyle="bold"
                        android:textColor="@color/color_white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="WS Code"
                        android:textColor="@color/color_white" />

                    <TextView
                        android:id="@+id/export_DiameterSizes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="Diameter Sizes"
                        android:textColor="@color/color_white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="CBM"
                        android:textColor="@color/color_white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text="Select"
                        android:textColor="@color/color_white" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/innerRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/exportlayoutBackground"
                    android:background="#f6f6f6"
                    android:visibility="gone">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
