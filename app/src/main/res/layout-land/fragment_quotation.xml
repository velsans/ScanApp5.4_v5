<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_or_edittext_hight_large"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.15"
                android:background="@color/color_white"
                android:gravity="right|center"
                android:paddingLeft="5dp"
                android:text="ADD QUOTATION : "
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/export_WSpecieTxT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/white_edittextstyle"
                android:completionThreshold="1"
                android:gravity="center"
                android:hint="WSpieceCode"
                android:inputType="textCapCharacters|textNoSuggestions"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_black"
                android:textColorHint="@color/theme_border"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/diameterEDT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/white_edittextstyle"
                android:gravity="center"
                android:hint="Diameter Range (10-20)"
                android:inputType="text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_black"
                android:textColorHint="@color/edittextColor"
                android:textStyle="bold"></EditText>

            <EditText
                android:id="@+id/TotCBMEDT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/white_edittextstyle"
                android:gravity="center"
                android:hint="Total CBM"
                android:inputType="numberDecimal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_black"
                android:textColorHint="@color/edittextColor"
                android:textStyle="bold"></EditText>

            <EditText
                android:id="@+id/selectedCBM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/white_edittextstyle"
                android:gravity="center"
                android:hint="Selected CBM"
                android:inputType="text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_black"
                android:textColorHint="@color/edittextColor"
                android:textStyle="bold"
                android:visibility="gone"></EditText>

            <ImageView
                android:id="@+id/quationListIMG"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:background="@color/color_white"
                app:srcCompat="@mipmap/addbutton"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_or_edittext_hight_large"
            android:background="@color/TabColor"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="WoodSpecieCode"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ScannedCount"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="DiameterMin"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="DiameterMax"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="QuantityCBM"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"
                android:text="Tot Count"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ScannedCBM"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/all_BarCodeDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="1.2"
                app:srcCompat="@mipmap/list"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/RemoveQuotations"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:visibility="gone"
                android:layout_weight="1.2" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_Quotationlist"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/textview_or_edittext_hight_large"
            android:layout_height="match_parent"
            ></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_or_edittext_hight_large"
        android:layout_gravity="bottom"
        android:layout_weight="3"
        android:background="@color/colorbtnsplash"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="invisible"
            android:text="WoodSpecieCode"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="Total CBM : "
            android:textColor="@color/color_white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/export_QuotationTotCBM"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="TotScandCBM :"
            android:textColor="@color/color_white"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TotalScannedLogsCountVolumeTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_white"
            android:textStyle="bold" />



    </LinearLayout>


    <FrameLayout
        android:id="@+id/quotationDetailsUpdateLAY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blacktransper"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_or_edittext_hight_xlarge"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="120dp"
            android:background="@color/deeporange"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/Quotation_Edit_WSpecieTxT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/white_edittextstyle"
                android:completionThreshold="1"
                android:gravity="center"
                android:hint="WSpieceCode"
                android:inputType="textCapCharacters|textNoSuggestions"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_black"
                android:textColorHint="@color/theme_border"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Quotation_Edit_diameterEDT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/white_edittextstyle"
                android:gravity="center"
                android:hint="Diameter Range (10-20)"
                android:inputType="text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_black"
                android:textColorHint="@color/edittextColor"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Quotation_Edit_TotCBMEDT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/white_edittextstyle"
                android:gravity="center"
                android:hint="Total CBM"
                android:inputType="numberDecimal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_black"
                android:textColorHint="@color/edittextColor"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Quotation_updateBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="Update"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_white"
                android:textColorHint="@color/edittextColor"
                android:textStyle="bold"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/Quotation_closeIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_margin="1dp"
                android:layout_weight="1.20"
                android:background="@color/color_white"
                app:srcCompat="@mipmap/delete_cross" />
        </LinearLayout>

    </FrameLayout>


    <LinearLayout
        android:id="@+id/progressbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <include
            layout="@layout/progressbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></include>
    </LinearLayout>
</FrameLayout>
