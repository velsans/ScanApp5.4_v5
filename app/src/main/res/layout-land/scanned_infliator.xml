<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_or_edittext_hight_large"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:visibility="gone">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/countlayoutBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_or_edittext_hight_large"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/count_removeBarCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.3"
            android:background="@color/red">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center"
                app:srcCompat="@mipmap/ic_delete_forever_white_24dp"
                android:textColor="@android:color/black"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/count_sbblabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:gravity="center"
            android:text="123456789"
            android:textColor="@color/color_black" />

        <TextView
            android:id="@+id/count_speiceCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:gravity="center"
            android:text="ABCDEFGH"
            android:textColor="@color/color_black" />


        <Spinner
            android:id="@+id/count_qualitySpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:backgroundTint="@color/color_black"
            android:overlapAnchor="false"
            android:popupBackground="@color/cyan"
            android:textAlignment="center"
            android:textColor="@color/color_black"
            android:textStyle="bold" />


    </LinearLayout>
</LinearLayout>