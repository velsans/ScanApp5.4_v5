<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transperantBlack"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_or_edittext_hight_large"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Advance Search"
                android:textColor="@color/color_white"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/as_closeActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="10"
                android:src="@mipmap/delete_cross" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_or_edittext_hight_large"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sbbLabel_TXT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="SBBLabel"
                    android:textColor="@color/color_white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="Tree No : "
                    android:textColor="@color/color_white"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/as_treenoEDT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edittextstyle"
                    android:gravity="center"
                    android:hint="Enter Tree No"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/edittextColor">

                    <requestFocus />
                </EditText>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="Felling ID : "
                    android:textColor="@color/color_white"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/as_fellingEDT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edittextstyle"
                    android:gravity="center"
                    android:hint="Enter Felling ID"
                    android:inputType="number"
                    android:textColor="@color/color_white"
                    android:textColorHint="@color/edittextColor">


                </EditText>

                <ImageView
                    android:id="@+id/as_scannerList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:src="@mipmap/login"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_white" />

            <LinearLayout
                android:id="@+id/scannerListlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textview_or_edittext_hight_large"
                    android:background="@color/colorPrimary_light"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="SBB Label"
                        android:textColor="@color/color_white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="WoodSpeiceCode"
                        android:textColor="@color/color_white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Length"
                        android:textColor="@color/color_white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Volume"
                        android:textColor="@color/color_white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:text="F1"
                        android:textColor="@color/color_white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:text="F2"
                        android:textColor="@color/color_white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:text="T1"
                        android:textColor="@color/color_white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:text="T2"
                        android:textColor="@color/color_white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:background="@color/colorAccent"
                        android:gravity="center"
                        android:text="Select"
                        android:textColor="@color/color_black"
                        android:textStyle="bold"
                        android:visibility="invisible" />


                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/as_scan_lv"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:reverseLayout="true"
                        app:stackFromEnd="true"></android.support.v7.widget.RecyclerView>


                    <ImageView
                        android:id="@+id/as_NovalueFound"
                        android:layout_width="@dimen/textview_or_edittext_hight_xlarge"
                        android:layout_height="@dimen/textview_or_edittext_hight_xlarge"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@mipmap/addbutton"
                        android:visibility="gone" />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
